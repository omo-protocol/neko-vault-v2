# ==============================================================================
# Neko Vault V2 - Deployment Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values:
#   cp deployment/.env.example .env
#
# Load environment before running scripts:
#   source .env
# ==============================================================================

# ==============================================================================
# COMMON - Required for all deployments
# ==============================================================================
PRIVATE_KEY=0x...

# ==============================================================================
# NETWORK SELECTION
# ==============================================================================
# Use one of the pre-configured networks in foundry.toml:
#   --rpc-url hyperevm    (HyperEVM - Chain ID 999)
#   --rpc-url mantle      (Mantle - Chain ID 5000)
#
# Or specify a custom RPC URL directly:
#   --rpc-url https://rpc.hyperliquid.xyz/evm

# ==============================================================================
# VERIFICATION API KEYS
# ==============================================================================
ETHERSCAN_API_KEY=your_hyperevm_api_key
MANTLESCAN_API_KEY=your_mantle_api_key

# ==============================================================================
# STEP 0b: Deploy Valuer (0b_DeployValuer.s.sol)
# ==============================================================================
# Required:
ASSET_ADDRESS=0x...                          # ERC20 asset for valuation
KEEPER_ADDRESS=0x...                         # Keeper address for automated ops

# Optional:
STRATEGY_NAME=cmeth-option-vault             # Strategy identifier (default: "default-strategy")

# ==============================================================================
# STEP 1: Deploy Vault & Adapter (1_DeployVault_Adapter.s.sol)
# ==============================================================================
# Required (output from Step 0a):
VAULT_FACTORY_ADDRESS=0x...                  # From 0a_DeployFactory.s.sol
ADAPTER_FACTORY_ADDRESS=0x...                # From 0a_DeployFactory.s.sol

# Required (output from Step 0b):
VALUER_ADDRESS=0x...                         # From 0b_DeployValuer.s.sol

# ASSET_ADDRESS and STRATEGY_NAME from above are also used

# ==============================================================================
# STEP 2a: Configure Vault Core (2a_ConfigureVaultCore.s.sol)
# ==============================================================================
# Required (output from Step 1):
VAULT_ADDRESS=0x...                          # From 1_DeployVault_Adapter.s.sol
ADAPTER_ADDRESS=0x...                        # From 1_DeployVault_Adapter.s.sol

# Required:
ALLOCATOR_ADDRESS=0x...                      # Address to grant allocator role

# ==============================================================================
# STEP 2b: Configure Caps (2b_ConfigureCaps.s.sol)
# ==============================================================================
# Required:
# VAULT_ADDRESS from above

# Optional:
# STRATEGY_NAME from above
RELATIVE_CAP=1000000000000000000             # 1e18 = 100% (default)

# ==============================================================================
# STEP 2c: Configure Fees (2c_ConfigureFees.s.sol)
# ==============================================================================
# Required:
# VAULT_ADDRESS from above

# Optional (skip fee config if not set):
PERFORMANCE_FEE_RECIPIENT=0x...              # Address to receive performance fees
PERFORMANCE_FEE=200000000000000000           # 0.2e18 = 20% (default)

# ==============================================================================
# STEP 2d: Configure Adapter (2d_ConfigureAdapter.s.sol)
# ==============================================================================
# Required:
# ADAPTER_ADDRESS from above
# ALLOCATOR_ADDRESS from above

# Optional:
# STRATEGY_NAME from above
DAILY_LIMIT=10000000000000000000000          # 10000e18 = 10,000 tokens (default)

# ==============================================================================
# STEP 2f: Configure Mantle Whitelist (2f_ConfigureMantleSupplyOptimizerWhitelist.s.sol)
# ==============================================================================
# Required (for Mantle deployment):
# ADAPTER_ADDRESS from above

# Optional:
COMPOUND_COMET_USDE=0x...                    # Compound V3 Comet USDe address (if available)
